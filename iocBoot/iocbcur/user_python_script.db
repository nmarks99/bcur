record(stringout, "$(P)PythonScript$(N)") {
    field(OUT, "$(P)RunPythonScript$(N).VAL NPP")
}

record(stringout, "$(P)RunPythonScript$(N)") {
    field(DTYP, "pydev")
    field(VAL, "")
    field(OUT, "@from VAL import main; main()")
}

record(bi, "$(P)PythonScript$(N):Running") {
    field(DTYP, "pydev")
    field(INP, "@pydev.iointr('RUNNING$(N)')")
    field(SCAN, "I/O Intr")
}
